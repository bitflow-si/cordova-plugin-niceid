<?xml version='1.0' encoding='utf-8'?>
<plugin id="@bitflow-inc/cordova-plugin-niceid" version="1.0.3" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>NiceId</name>

    <!-- android -->
    <platform name="android">
        <js-module name="NiceId" src="www/niceid.js">
            <clobbers target="cordova.plugins.niceid" />
        </js-module>
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
            <uses-permission android:name="android.permission.CAMERA" />
            <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
        </config-file>
        <config-file target="res/values/strings.xml" parent="/*">
            <string name="app_name">healthpilot</string>
            <string name="launcher_name">@string/app_name</string>
            <string name="activity_name">@string/launcher_name</string>
            <string name="info_01">스캔에 실패 시,\n수진자의 등록번호를 입력하세요</string>
            <string name="info_02">수진번호</string>
            <string name="info_16">수진자의 QR코드를 스캔하세요.</string>
            <string name="info_17">등록번호를 입력해주세요.</string>
            <string name="info_71">수진번호 8자리를 입력 해주세요</string>
            <string name="btn_save">저장</string>
            <string name="message_application_close">\'뒤로\'버튼을 한번 더 누르시면 종료됩니다.</string>
            <string name="message_error_barcode_data">인식할 수 없는 QR코드 형식입니다.</string>
        </config-file>
        <config-file target="res/values/themes.xml" parent="/*">
            <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen.IconBackground">
                <item name="windowSplashScreenBackground">@color/cdv_splashscreen_background</item>
                <item name="windowSplashScreenAnimatedIcon">@drawable/transparent</item>
                <item name="windowSplashScreenAnimationDuration">200</item>
                <item name="postSplashScreenTheme">@style/Theme.AppCompat.NoActionBar</item>
            </style>
        </config-file>
        <config-file target="res/values/colors.xml" parent="/*">
            <color name="cdv_splashscreen_background">#FFFFFF</color>
        </config-file>
        <config-file target="res/values/styles.xml" parent="/*">
            <style name="barcode_top_txt">
                <item name="android:textSize">14sp</item>
                <item name="android:textColor">#009ddb</item>
                <item name="android:background">#f6f6f6</item>
                <item name="android:letterSpacing">-0.09</item>
                <item name="android:lineSpacingExtra">6sp</item>
            </style>

            <style name="barcode_bottom_txt">
                <item name="android:textSize">14sp</item>
                <item name="android:textColor">#1b2946</item>
                <item name="android:letterSpacing">-0.01</item>
                <item name="android:lineSpacingExtra">6sp</item>
            </style>

            <style name="barcode_blue_txt">
                <item name="android:textSize">13sp</item>
                <item name="android:textColor">#009ddb</item>
                <item name="android:letterSpacing">-0.015</item>
                <item name="android:lineSpacingExtra">7sp</item>
            </style>

            <style name="login_black_double_txt">
                <item name="android:textSize">13sp</item>
                <item name="android:textColor">#102542</item>
                <item name="android:letterSpacing">-0.015</item>
                <item name="android:lineSpacingExtra">7sp</item>
                <item name="android:gravity">left</item>
            </style>

            <style name="save_btn">
                <item name="android:textSize">14sp</item>
                <item name="android:textColor">#ffffff</item>
                <item name="android:padding">12dp</item>
                <item name="android:letterSpacing">-0.01</item>
                <item name="android:lineSpacingExtra">16sp</item>
            </style>

            <style name="EditText" parent="Widget.AppCompat.EditText">
                <item name="android:padding">12dp</item>
                <item name="android:minHeight">48dp</item>
                <item name="android:gravity">center_vertical</item>
                <item name="android:textColorHint">#C3C3CB</item>
                <item name="android:textColor">#424B55</item>
                <item name="android:textSize">13sp</item>
                <item name="android:background">@drawable/background_edit_text</item>
            </style>
        </config-file>
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="NiceId">
                <param name="android-package" value="org.apache.cordova.niceid.NiceId" />
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="application">
            <activity android:name="org.apache.cordova.niceid.CertificationWebActivity" android:screenOrientation="portrait" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustResize|stateHidden" android:exported="false" />
        </config-file>
        <source-file src="src/android/NiceId.java" target-dir="src/org/apache/cordova/niceid" />
        <source-file src="src/android/CertificationWebActivity.java" target-dir="src/org/apache/cordova/niceid" />
        <source-file src="src/android/MobileCertification.java" target-dir="src/org/apache/cordova/niceid" />
        <source-file src="src/android/BarcodeActivity.java" target-dir="src/org/apache/cordova/niceid" />
        <source-file src="src/android/QRCodeData.java" target-dir="src/org/apache/cordova/niceid" />

        <source-file src="src/android/activity_barcode.xml" target-dir="res/layout" />
        <source-file src="src/android/custom_barcode_scanner.xml" target-dir="res/layout" />

        <framework src="com.google.code.gson:gson:2.9.1" />
        <framework src="com.journeyapps:zxing-android-embedded:3.6.0" />
    </platform>

    <!-- ios -->
    <platform name="ios">
        <js-module name="NiceId" src="www/niceid.js">
            <clobbers target="cordova.plugins.niceid" />
        </js-module>
        <config-file target="config.xml" parent="/*">
            <feature name="NiceId">
                <param name="ios-package" value="NiceId" />
            </feature>
        </config-file>
        <source-file src="src/ios/NiceId.swift" />
        <source-file src="src/ios/WebViewController.swift" />

    </platform>

</plugin>
